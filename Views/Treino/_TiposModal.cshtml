@model List<tcc_in305b.Models.TreinoTipo>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<div id="tiposModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Gerenciar Tipos de Treinos</h5>
                
            </div>
            <div class="modal-body">
                <!-- Botão de criação -->
                <button class="btn btn-primary mb-3" onclick="openCreateTreinoTipoForm()">+ Criar</button>

                <!-- Tabela de tipos de treino -->
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Cor</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tipo in Model)
                        {
                            <tr>
                                <td>@tipo.Nome</td>
                                <td><span style="background-color: @tipo.CorHex; padding: 5px; color: white;">@tipo.CorHex</span></td>
                                <td>
                                    <button class="btn btn-sm btn-success" onclick="editTreinoTipo(@tipo.Id)">Editar</button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteTreinoTipo(@tipo.Id)">Excluir</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Formulário de criação/edição será carregado aqui dinamicamente -->
                <div id="treinoTipoFormContainer"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}