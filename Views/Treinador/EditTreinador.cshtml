@model tcc_in305b.Models.Treinador

<h2>Editar Treinador</h2>

<form asp-action="EditTreinador">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" asp-for="User.Email" />
    </div>

    <input type="hidden" asp-for="Id" />

    <!-- Campo oculto para garantir que o UserId seja enviado -->
    <input type="hidden" asp-for="UserId" />

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="CrudTreinador" class="btn btn-secondary">Voltar</a>    
</form>
