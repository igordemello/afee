@model Torneio

<h2>Criar Novo Torneio</h2>

<form asp-action="Criar" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Tipo">Tipo</label>
        <select asp-for="Tipo" name="Tipo" class="form-control" >
        <option value="">Selecione</option>
        <option value="Interno">Interno</option>
        <option value="Externo">Externo</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DataInicio">Data de início:</label>
        <input type="date" asp-for="DataInicio" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Convidado">Convidado:</label>
        <input type="text" asp-for="Convidado" class="form-control" />
        <span asp-validation-for="Convidado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="QuantidadeEquipes">Quantidade de equipes?</label>
        <select id="QuantidadeEquipes" name="quantidadeEquipes" class="form-control" asp-for="QuantidadeEquipes" >
            <option value="">Selecione</option>
            <option value="4">4</option>
            <option value="8">8</option>
            <option value="16">16</option>
            <option value="32">32</option>
        </select>
    </div>


    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <button type="submit" class="btn btn-success">Criar Torneio</button>
</form>
